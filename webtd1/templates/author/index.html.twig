{% extends 'base.html.twig' %}

{% block title %}Hello AuthorController!{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg bg-body-tertiary" class="navbar bg-dark border-bottom border-body" data-bs-theme="dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Navbar w/ text</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarText">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="#">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Features</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Pricing</a>
        </li>
      </ul>
      <span class="navbar-text">
        Navbar text with an inline element
      </span>
    </div>
  </div>
</nav>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
{% set nb = 0 %}
<table border="5"  class="table table-hover">
    {% if list is defined %}
        {% if list is empty %}
            <tr>
                <td colspan="5"><h1>Tableau vide</h1></td>
            </tr>
        {% else %}
            <tr>
                <th>  Id</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Photo</th>
                      <th>Details</th>
            </tr>
            {% for item in list %}
                <tr>
                    <td>{{ item.id }}</td>
                    <td>{{ item.username | upper }}</td>
                    <td>{{ item.email }}</td>
                    <td><img src="{{ item.picture }}" alt="Photo"></td>
                    <td><a href="{{ path('app_authordetails', {'id': item.id} ) }}" ><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-clipboard-minus-fill" viewBox="0 0 16 16">
  <path d="M6.5 0A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3Zm3 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3Z"/>
  <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1A2.5 2.5 0 0 1 9.5 5h-3A2.5 2.5 0 0 1 4 2.5v-1ZM6 9h4a.5.5 0 0 1 0 1H6a.5.5 0 0 1 0-1Z"/>
</svg></a></td>

                </tr>
                {% set nb = nb + item.nb_books %}
            {% endfor %}
        {% endif %}
    {% else %}
        <tr>
            <td colspan="5" class="shadow-lg p-3 mb-5 bg-body-tertiary rounded"><h1>Tableau non défini</h1></td>
        </tr>
    {% endif %}
</table>
<br>
<div class="card text-bg-info mb-3" style="max-width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">Information</h5>
    <p class="card-text">Le nombre d'éléments dans le tableau est {{ list | length }}</p>
  </div>
</div>
<div class="card text-bg-primary mb-3" style="max-width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">Information</h5>
    <p class="card-text">Le total des livres est {{ nb }}
</p>
  </div>
</div>
<style>
.card{

    background-color:;
    margin-left:40%;
}
.table{
    margin-top:5%;
}

</style>
{% endblock %}
